#include <iostream>
using namespace std;

// Task 2
int main() {
	int num;
	cout << "enter number: ";
	cin >> num;

	int** arr = new int* [num];
	
	for (int i = 0; i < num; i++) {
		arr[i] = new int[num];
	}

	for (int i = 0; i < num; i++) {
		for (int j = 0; j < num; j++) {
			arr[i][j] = num + i * num + j;
		}
	}
	cout << "the rusult array: " << endl;
	for (int i = 0; i < num; i++) {
		for (int j = 0; j < num; j++) {
			cout << arr[i][j] << " ";
		}
		cout << endl;
	}
 }
